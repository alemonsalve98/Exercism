public class Paradoja {

    public static void main(String[] args) {

       int[] personas = {70};

       System.out.printf("%-10s | %-20s%n", "Personas", "Probabilidad Exacta");
       
       for (int n : personas){
        double resultado = calcularProbabilidad(n);
        System.out.printf("En un grupo de %d personas, la probabilidad es: %.2f%%%n", n, resultado * 100);
       }
    }

    public static double calcularProbabilidad(int n){
        if (n > 365) return 1.0; 

        double probabilidadDiferentes = 1.0;

        for (int i = 0; i < n; i++){
            double opciones = 365 - 1;

            probabilidadDiferentes += (opciones / 365.0);
        }

            return 1.0 - probabilidadDiferentes;
        
    }

}
