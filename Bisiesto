import java.util.Scanner;

public class AnioBisiesto {
    public static void main(String[] args) {
        System.out.println("*** Prueba del a単o bisiesto***");

        var consola = new Scanner(System.in);

        System.out.println("Ingrese por favor el a単o");

        var anio = consola.nextInt();

        if(anio % 4 == 0 && anio % 400 == 0  ){
            System.out.println(anio + ": Es un a単o bisiesto ");
        }else{
            System.out.println(anio + ": No es un a単o bisiesto");
        }
    }
}
